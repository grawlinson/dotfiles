[alias]
	# you really think i use this? no. it's an example.
	# source - https://github.com/ngerakines/commitment
	yolo = !git commit -m \"$(curl -s whatthecommit.com/index.txt)\"

[commit]
	gpgsign = true
	template = ~/.config/git/template

